<div class="container">
    <h1>Listado de libros</h1>
    <hr>

    {{#each books}}

    <p>
        {{title}}
        <small>- {{#each author}}
            {{name}} {{lastName}}
            - {{/each}}
            [<a href="/libros/detalles/{{id}}">ver detalles</a>]
            [<a href="/libros/editar?book_id={{id}}">editar</a>]
        </small>
    </p>

    <hr style="opacity: .5;">

    {{/each}}

    <a href="/" class="btn btn-dark">Volver</a>
</div>